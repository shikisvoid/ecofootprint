# EcoCloudApp Environment Variables Template
# Copy this file to .env and fill in your actual values

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Google Cloud Configuration
VITE_GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Weather API Configuration
VITE_WEATHER_API_KEY=your_openweathermap_api_key

# Dialogflow Configuration
VITE_DIALOGFLOW_PROJECT_ID=your_dialogflow_project_id
VITE_DIALOGFLOW_WEBHOOK_URL=https://your-ngrok-url.ngrok.io/api/dialogflow-webhook
VITE_DIALOGFLOW_LANGUAGE_CODE=en

# Webhook Server Configuration
WEBHOOK_PORT=3001
WEBHOOK_SECRET=your-webhook-secret-key

# Google Cloud Service Account (for server-side Dialogflow API)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# API Keys for External Services
VITE_WAQI_API_KEY=your_world_air_quality_index_api_key
VITE_NEWS_API_KEY=your_news_api_key

# Application Configuration
VITE_APP_NAME=EcoCloudApp
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Analytics Configuration (optional)
VITE_GOOGLE_ANALYTICS_ID=your_ga_tracking_id
VITE_GOOGLE_TAG_MANAGER_ID=your_gtm_id

# Feature Flags
VITE_ENABLE_CHATBOT=true
VITE_ENABLE_VOICE_INPUT=false
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# Development Configuration
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info
